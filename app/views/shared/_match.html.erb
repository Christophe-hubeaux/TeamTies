
<div class="match">
    <div class="home-team">
        <div class="flag">
            <i class="fa-solid fa-flag"></i>
        </div>
        <div class="team-name">
            <% if match.home_team.present? %>
                <%= match.home_team.name %>
            <% else %>
                Pas de Home Team
            <% end %>
        </div>
        <div class="shape">
        </div>
    </div>

    <div class="score">
        <div class="text-center mb-2">
            Groupe <%= match.group %>
        </div>
        <div class="prono">
            <p>Mon prono</p>
            <% if prono.nil? %>
                <div>
                    <%= render "shared/my-prono-form", match: match, prono: @prono %>
                </div>
            <% else %>
                <div class="input-prono">
                    <div class="team-prono form-control">
                        <%= prono.home_team_prono unless prono.nil? %>
                    </div>
                    <div class="team-prono form-control">
                        <p><%= prono.away_team_prono unless prono.nil? %></p>
                    </div>
                </div>
            <% end %>

        <% unless prono.nil? %>
            <div class="result text-center mt-2">
                <p>RÃ©sultat</p>
                <p><%= match.home_team_result %><%= match.away_team_result %></p>
            </div>
        <% end %>
        </div>
    </div>

    <div class="away-team">
        <div class="flag">
            <i class="fa-solid fa-flag"></i>
        </div>
        <div class="team-name">
            <% if match.away_team.present? %>
                <%= match.away_team.name %>
            <% else %>
                Pas de Away Team
            <% end %>
        </div>
        <div class="shape">
        </div>
    </div>
</div>
