<div class="banner">
    <div class="container">
      <%= render "shared/popup" %>
      <ligne-flex class="row">

        <h2>Mon dashboard </h2>
        <p>👋🏻 Bonjour Christophe ! </p>
        <p>Departement : <%= current_user.department %></p>
        <p>Partie en cours : <%= @game.name %></p>
      </ligne-flex>

      <ligne-grid>

        <h4> Performances sur ces 7 derniers jours: </h4>
        <div class="banner-cards">
          <div class="banner-card-category">
            <%= image_tag "v242_54.png", class: "avatar" %>
            + 12 points
          </div>

          <div class="banner-card-category">
            <%= image_tag "v242_55.png", class: "avatar" %>
            + 2 places au classement individuel
          </div>

          <div class="banner-card-category">
            <%= image_tag "v242_56.png", class: "avatar" %>
            + 1 place au classement par équipe
          </div>
        </div>

      </ligne-grid>

  </div>
</div>

<div class="container p-5">
  <div class="banner-cards d-flex justify-content-center">
      <div class="banner-card-category" style="min-height:500px;">
        <%= render "shared/ranking" %>
      </div>
      <div class="banner-card-category" style="min-height:500px;">
        <%#= render partial: "shared/match", locals: {match: @match} %>
      </div>
  </div>
</div>
