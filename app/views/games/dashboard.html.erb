<div class="banner">
    <div class="container">
      <%= render "shared/popup" %>
      <ligne-flex class="row">

        <h2>Mon dashboard </h2>
        <p>👋🏻 Bonjour <%= current_user.pseudo %> ! </p>
        <p>Équipe : <%= current_user.department %></p>
        <p>Partie en cours : <%= @game.name %></p>
        <p>Ton Code est le : <%= @game.code %></p>
        <p> Partage ce lien avec ton équipe ! </p>

        <div data-controller="clipboard bounce" class="input-group mb-3">
          <div class="input-group-prepend">
            <button class="btn btn-outline-secondary alive" type="button" data-action="mouseup->clipboard#copy mouseup->bounce#startBounce" data-bounce-target="button">Copier ce lien</button>
          </div>
          <input type="text" value="<%= url_for(controller: 'games', action: 'join', code: @game.code, only_path: false) %>" class="form-control bg-transparent border-0" placeholder="" aria-label="" aria-describedby="basic-addon1" data-clipboard-target="input" disabled>
        </div>

      </ligne-flex>

      <ligne-grid>

        <h4> Performances sur ces 7 derniers jours: </h4>
        <div class="banner-cards">
          <div class="banner-card-category">
            <%= image_tag "v242_54.png", class: "avatar" %>
            + 12 points
          </div>

          <div class="banner-card-category">
            <%= image_tag "v242_55.png", class: "avatar" %>
            + 2 places au classement individuel
          </div>

          <div class="banner-card-category">
            <%= image_tag "v242_56.png", class: "avatar" %>
            + 1 place au classement par équipe
          </div>
        </div>

      </ligne-grid>

  </div>
</div>

<div class="container p-5">
  <div class="banner-cards d-flex justify-content-center">
      <div class="bottom-card-category">
        <%= render "shared/ranking" %>
      </div>
      <div class="bottom-card-category">
        <% if @next_three_matches %>
          <% @next_three_matches.each do |match, prono| %>
            <%= render "shared/match", match: match, prono: prono %>
          <% end %>
        <% end %>
      </div>
  </div>
</div>
