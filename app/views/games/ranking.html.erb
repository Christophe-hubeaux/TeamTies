<% if @users_ranking.present? %>
  <div style="display: flex;">
    <div style="flex: 1;">
      <h2>Classement Individuel</h2>
      <table>
        <thead>
          <tr>
            <th>Utilisateur</th>
            <th>Points</th>
          </tr>
        </thead>
        <tbody>
          <% @users_ranking.each do |user, score| %>
            <tr>
              <td><%= user.respond_to?(:pseudo) ? user.pseudo : user[0] %></td>
              <td><%= score %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
<% else %>
  <p>Aucune donn√©e de classement n'est disponible pour le moment.</p>
<% end %>
